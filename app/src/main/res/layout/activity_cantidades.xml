<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".CantidadesActivity">
    <android.support.design.widget.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </android.support.design.widget.AppBarLayout>



    <LinearLayout
            android:paddingTop="35dp"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:paddingLeft="10dp"
                android:text="Cantidades"
                android:id="@+id/nombreProducto"/>



        <LinearLayout
                android:id="@+id/linea1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="fill"
                android:orientation="horizontal">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Cantidad Existente: "
                      android:textSize="30sp"
                      android:textColor="@android:color/black"

            />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/cantidadexistente"
                      android:text="100"
                      android:paddingLeft="40dp"
                      android:textSize="32sp"
                      android:textColor="@android:color/black"

            />



        </LinearLayout>

        <LinearLayout
                android:id="@+id/linea2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="fill"

                android:orientation="horizontal">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Cantidad Agregada: "
                      android:textSize="30sp"
                      android:textColor="@android:color/black"

            />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/cantidadagregada"
                      android:text="100"
                      android:paddingLeft="33dp"
                      android:textSize="32sp"
                      android:textColor="@android:color/black"

            />



        </LinearLayout>
        <LinearLayout
                android:id="@+id/linea3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="50dp"
                android:layout_margin="8dp"
                android:gravity="end"
                android:orientation="horizontal">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Cantidad Total: "
                      android:textSize="30sp"
                      android:textColor="@android:color/black"

            />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/cantidadtotal"
                      android:text="100"
                      android:textSize="32sp"
                      android:textColor="@android:color/black"

            />



        </LinearLayout>

        <LinearLayout
                android:id="@+id/menuLinearLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/linea"
                android:weightSum="2">

            <Button
                    android:id="@+id/btnSalir"
                    android:layout_weight="1"
                    android:text="Salir"
                    android:textColor="@android:color/white"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/botonesinicio"
                    android:layout_marginTop="10dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"/>
            <Button
                    android:id="@+id/btnAgregarCantidad"
                    android:text="Editar Cantidad"
                    android:textColor="@android:color/white"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/botonesinicio"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"/>


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>